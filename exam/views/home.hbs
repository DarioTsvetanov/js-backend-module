<main>

    {{#if error}}
        <section class="notifications">
            <p class="notification-message">{{ error.message }}</p>
        </section>
    {{/if}}

    {{#if isAuth}}
        <section class="actions">
            <form action="/expense/refill" method="POST">
                <h2>Salary time? Refill your account amount.</h2>
                <input type="text" id="refill-amount" name="amount">
                <button type="submit">Refill</button>
            </form>
            <div>
                <h2>New expense comming up?</h2>
                <a href="/expense/create">Add it now</a>
            </div>
        </section>

        <hr class="separator">
        {{#if expenses}}
            <table class="expenses">
                <thead>
                    <tr>
                        <th>Merchant</th>
                        <th>Amount</th>
                        <th>Category</th>
                        <th>Description</th>
                    </tr>

                </thead>
                <tbody>
                    {{#each expenses}}
                        {{>expenseRow}}
                    {{/each}}
                </tbody>
            </table>
        {{else}}
		    <h1 class="no-expenses">No expenses founded so far.. <span>GOOD JOB!</span></h1>
		{{/if}}
    {{else}}
    <p class="guest-message">MoneyGone? The best expense tracker tool of all time!<br>–êre you new here? <a href="/auth/register">Register</a> yourself!</p>
    {{/if}}
</main>